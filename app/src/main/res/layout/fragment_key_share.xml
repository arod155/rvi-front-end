<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555"
    android:orientation="vertical"
    android:columnCount="2"
    android:rowCount="4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jaguarlandrover.auto.remote.vehicleentry.keyShareActivityFragment"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textSize="20dp"
            android:layout_marginRight="150dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vehicle"
            android:textSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginBottom="15dp"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="15dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginBottom="15dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:columnCount="3"
        android:rowCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valid From:"
            android:textSize="20dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginRight="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id ="@+id/startlblDate"
            android:textSize="20dp"
            android:textColor="#ffff"
            android:background="#55000000"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginRight="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starttimeLbl"
            android:textSize="20dp"
            android:text="12:00 am"
            android:textColor="#ffff"
            android:background="#55000000"
            android:layout_column="2"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Valid To:"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_marginRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id ="@+id/endlblDate"
            android:textSize="20dp"
            android:textColor="#ffff"
            android:background="#55000000"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginRight="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endtimeLbl"
            android:textSize="20dp"
            android:textColor="#ffff"
            android:background="#55000000"
            android:text="12:00 am"
            android:layout_column="2"
            android:layout_row="1"/>
    </GridLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginBottom="15dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        android:columnCount="2"
        android:rowCount="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id ="@+id/LockswitchLbl"
            android:textColor="#ffff"
            android:text="Lock/Unlock"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_marginRight="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/engineswitchLbl"
            android:text="Engine Start"
            android:textColor="#ffff"
            android:layout_column="0"
            android:layout_row="1"/>
        <Switch
            android:layout_column="1"
            android:layout_row="0"
            android:textOn="ON"
            android:textOff="OFF"
            android:layout_marginEnd="15dp"
            android:id="@+id/lockSwitch"/>
        <Switch
            android:layout_column="1"
            android:layout_row="1"
            android:textOn="ON"
            android:textOff="OFF"
            android:layout_marginEnd="15dp"
            android:id="@+id/engineSwitch"/>

    </GridLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ShareBtn"
        android:text="Share Key"/>
</LinearLayout>